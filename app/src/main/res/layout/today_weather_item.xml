<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/today_weather_item_current_time"
        android:textColor="@color/white"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:maxLines="1"
                android:id="@+id/today_weather_item_current_temperature"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="40pt"
                android:text="17Â°"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="12pt"
                android:id="@+id/today_weather_item_feel_like"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="Feel like 20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/sun"
                android:layout_width="match_parent"
                android:layout_height="125dp"/>
            <TextView
                android:id="@+id/today_weather_item_status"
                android:textColor="@color/white"
                android:textSize="12pt"
                android:layout_gravity="center"
                android:text="Nice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>